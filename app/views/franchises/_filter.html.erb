<ul class="nav nav-pills">
	<li class="disabled"><a href="#">Roster:</a></li>
	<li id="filter_roster_full" class="filter_roster <%= 'active' if @roster == 'full' %>">
		<%= link_to 'Full', franchise_path(view: @view, roster: 'full'), remote: true %>
	</li>
	<li id="filter_roster_40" class="filter_roster <%= 'active' if @roster == '40' %>">
		<%= link_to '40-Man', franchise_path(view: @view, roster: '40'), remote: true %>
	</li>
	<li id="filter_roster_dl" class="filter_roster <%= 'active' if @roster == 'dl' %>">
		<%= link_to 'DL', franchise_path(view: @view, roster: 'dl'), remote: true %>
	</li>
	<li id="filter_roster_unavailable" class="filter_roster <%= 'active' if @roster == 'unavailable' %>">
		<%= link_to 'Unavailable', franchise_path(view: @view, roster: 'unavailable'), remote: true %>
	</li>
	<li class="disabled"><a href="#">Show:</a></li>
	<li id="filter_view_bio" class="filter_view <%= 'active' if @view == 'bio' %>">
		<%= link_to 'Bio', franchise_path(view: 'bio', roster: @roster), remote: true %>
	</li>
	<li id="filter_view_stats" class="filter_view <%= 'active' if @view == 'stats' %>">
		<%= link_to 'Stats', franchise_path(view: 'stats', roster: @roster), remote: true %>
	</li>
	<li id="filter_view_contract" class="filter_view <%= 'active' if @view == 'contract' %>">
		<%= link_to 'Contract', franchise_path(view: 'contract', roster: @roster), remote: true %>
	</li>
	
	<li id="filter_team" class="dropdown pull-right">
		<a id="team_filter" role="button" data-toggle="dropdown" href="#">
			<% if @team.nil? %>
			Team
			<% else %>
			<%= @selected_team.city %> (<%= @selected_team.level %>)
			<% end %>
			<span class="caret"></span>
		</a>
		<ul id="team_menu" role="menu" class="dropdown-menu" aria-labelledby="team_filter">
			<li><%= link_to 'All', franchise_path(view: @view, roster: @roster, team: nil), html_options: { tabindex: -1 }, remote: true %></li>
			<% %w(MLB AAA AA A+ A A-SS R).each do |level| %>
				<% @teams.each do |team| %>
					<% if team.level == level %>
					<li><%= link_to "#{team.full_name} (#{team.level})", franchise_path(view: @view, roster: @roster, team: team), html_options: { tabindex: -1 }, remote: true %></li>
					<% end %>
				<% end %>
			<% end %>
		</ul>
	</li>
</ul>